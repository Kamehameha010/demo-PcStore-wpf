<Window x:Class="PcStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PcStore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True" RenderTransformOrigin="0.512,0.505">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="180*"></RowDefinition>
        </Grid.RowDefinitions>
        <Frame x:Name="ContentFrame" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center"></Frame>
        <Menu x:Name="menu">
            <MenuItem Header="File" FontSize="16" Width="90" Height="50" HorizontalContentAlignment="Center">
                <MenuItem Header="Exit" FontSize="14"></MenuItem>
            </MenuItem>
            <MenuItem Header="Products" FontSize="16" Width="90" Height="50" HorizontalContentAlignment="Center" Click="MenuItemProducts_Click"></MenuItem>
            <MenuItem Header="Sales" FontSize="16" Width="90" Height="50" HorizontalContentAlignment="Center" ></MenuItem>
        </Menu>
    </Grid>
</Window>
